#!/usr/bin/env ruby

require 'rack'
require 'optparse'

# By default, the port is 3000. It gets overridden by the option parser if the
# user specifies a port using the -p or --port option.

options = {port: 3000}

OptionParser.new do |opts|
  opts.banner = "Usage: tessitura [options]"

  opts.on('-p', '--port', 'Specify the port to bind Tessitura (default 3000)') do |p|
    options[:port] = p
  end
end

begin
  path = File.expand_path('../../config.ru', __FILE__)
  system "thin start -R #{path}"
rescue LoadError => e
  require 'rubygems'
  path = File.expand_path('../../', __FILE__)
  $:.unshift(path) if File.directory?(path) && !$:.include?(path)
  system "thin start -R #{path}/config.ru"
end
