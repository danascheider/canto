source 'https://rubygems.org'

# Require Sinatra
gem 'sinatra', '~> 1.4.5'

# Use Thin web server
gem 'thin', '~> 1.6.2'

# Use rerun for reloading code
gem 'rerun', '~> 0.10.0'

# Use Cucumber and RSpec with Capybara for testing
group :test do 
  gem 'cucumber-sinatra', '~> 0.5.0'
  gem 'rspec',            '~> 3.0.0'
  gem 'rack-test',        '~> 0.6.2'
  gem 'capybara',         '~> 2.3.0'
  gem 'factory_girl',     '~> 4.4.0'
  gem 'database_cleaner', '~> 1.2.0'
end