source 'https://rubygems.org'

# Require Sinatra
gem 'sinatra', '~> 1.4.5'

# Use Thin web server
gem 'thin', '~> 1.6.2'

# Use Sinatra-Assetpack to 
gem 'sinatra-assetpack', '~> 0.3.3'

# Use ActiveRecord and SQLite 3 to manage DB records
gem 'sinatra-activerecord', '~> 2.0.2'
gem 'sqlite3',              '~> 1.3.9'
gem 'rake',                 '~> 10.3.2'

# Include core extension library for Sinatra
gem 'sinatra-contrib', '~> 1.4.2'

# Use rerun for reloading code
gem 'rerun', '~> 0.10.0'

# Use Backbone.js for client-side JavaScript
gem 'sinatra-backbone', '~> 0.1.1', :require => 'sinatra/backbone'
gem 'sprockets',        '~> 2.12.1'
gem 'ejs',              '~> 1.1.1'

# Use Cucumber and RSpec with Capybara for testing
group :test do 
  gem 'cucumber-sinatra', '~> 0.5.0'
  gem 'cucumber',         '~> 1.3.11'
  gem 'rspec',            '~> 3.0.0'
  gem 'rack-test',        '~> 0.6.2'
  gem 'capybara',         '~> 2.3.0'
  gem 'factory_girl',     '~> 4.4.0'
  gem 'database_cleaner', '~> 1.2.0'
end