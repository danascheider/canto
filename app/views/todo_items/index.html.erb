<h1>Listing <%= p @user.name %>'s To-Do Items</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% if @todo_items.size == 0 %>
      <p>No to-do items! <%= link_to 'Create one', new_user_todo_item_path %> here!</p>
    <% else %>
      <% @todo_items.each do |todo_item| %>
        <tr class='title'>
          <td><h3 class='title'><%= todo_item.title %></h3></td>
        </tr>
        <tr>
          <td><strong>Description:</strong> <%= todo_item.description %></td>
        </tr>
        <tr>
          <td><%= link_to 'Show', [@user, todo_item] %></td>
          <td><%= link_to 'Edit', edit_user_todo_item_path(@user, todo_item) %></td>
          <td><%= link_to 'Destroy', [@user, todo_item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'New to-do item', new_user_todo_item_path(@user) %>