<%= form_for([@user, @todo_item]) do |f| %>
  <% if @todo_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo_item.errors.count, "error") %> prohibited this todo_item from being saved:</h2>

      <ul>
      <% @todo_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <!-- Title -->
    <%= f.label :title %>
    <%= f.text_field :title %><br />

    <!-- Priority -->
    <%= f.label :priority %>
    <%= f.label :priority, 'Urgent' %>
    <%= f.radio_button :priority, 'Urgent' %>
    <%= f.label :priority, 'High' %>
    <%= f.radio_button :priority, 'High' %>
    <%= f.label :priority, 'Normal' %>
    <%= f.radio_button :priority, 'Normal', checked: true %>
    <%= f.label :priority, 'Low' %>
    <%= f.radio_button :priority, 'Low' %>
    <%= f.label :priority, 'Lowest' %>
    <%= f.radio_button :priority, 'Lowest' %><br />

    <!-- Description -->
    <%= f.label :description %>
    <%= f.text_area :description %><br />

    <!-- Status -->
    <%= f.label :status %>
    <%= f.select :status, ['New', 'In Progress', 'Blocking', 'Complete']%> <br />

    <!-- Deadline -->
    <%= f.label :deadline %>
    <%= f.datetime_local_field :deadline %><br />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
