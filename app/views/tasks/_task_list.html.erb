<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <% if task.incomplete? %>
        <tr id=<%="task-#{task.id}"%>>
          <td><%= check_box_tag "complete-task#{task.id}", remote: true %></td>
          <td><%= task.title %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>