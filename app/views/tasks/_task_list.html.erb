<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <% if task.incomplete? %>
        <tr id=<%="task-#{task.id}"%>>
          <td>
            <%= form_for task, url: mark_complete_url(task) do |f| %>
              <%= f.button 'Mark Complete', name: 'task[complete]', value: '1', remote: true %>
            <% end %>
          </td>
          <td><%= task.title %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>