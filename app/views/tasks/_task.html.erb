<table>
  <tr>
    <td>
      <!-- Mark Complete button -->
      <%= form_for @task, url: mark_complete_url(@task) do |f| %>
        <%= f.button '', name: 'task[complete]',
                         value: '1',
                         class: 'fa fa-check btn btn-info btn-circle mark-complete',
                         method: :patch,
                         "data-remote" => true %>
      <% end %>
    </td>

    <!-- Task information -->
    <td class="todo-list-item">
      <div class='task-info'>
        <%= link_to  "#{@task.title}", "#", remote: true %>

        <!-- Task details, hidden until clicked -->
        <% status = if @task.complete? then "Complete"; else "Incomplete"; end %>
        <div class="task-details">
          <strong>Status:</strong> <%= status %><br>
          <%= link_to 'Edit', '#', class: 'ajax-edit-link', action: :edit, remote: true %> 
          | <%= link_to 'Delete', @task, method: :delete, data: {confirm: 'Are you sure?' } %>
        </div>
      </div>
      <div class="edit-form">
        <%= render 'tasks/form' %>
      </div>
    </td>
  </tr>

  <tr
</table>